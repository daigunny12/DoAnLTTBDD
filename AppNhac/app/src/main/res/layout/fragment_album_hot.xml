<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custum_background3">

    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/relativealbum"
        android:background="#9C27B0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:id="@+id/textviewtileAlbum"
            android:text="ALBUM HOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/textviewxemthemAlbum"
            android:textColor="#E6E6E6"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:text="Xem ThÃªm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/relativealbum"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>