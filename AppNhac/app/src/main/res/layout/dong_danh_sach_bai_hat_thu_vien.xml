<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imgeviewbaihat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iconthuvien"
            >

        </ImageView>

        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/imgeviewbaihat"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:text="Nghệ sỹ không xác định"
            android:textSize="16sp"
            android:textColor="#979797"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/imgeviewbaihat"
            android:layout_below="@+id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>